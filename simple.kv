#:kivy 1.11.1
<SimpleLabel@Button>:
    clr:0,0,0
    canvas.before:
        Color:
            rgb:self.clr
        Rectangle:
            size:self.size
            pos:self.pos

<SimpleWidget>:
    ort:"vertical"
    name:"main"
    BoxLayout:
        orientation:root.ort
        canvas.before:
            Color:
                rgb:[0,1,1]
            Rectangle:
                size:self.size
                pos:self.pos
        SimpleLabel:
            text:'Bye'
            clr:1,0,0
            on_press: root.change_screen("last")
        SimpleLabel:
            text:"Hi"
            on_press: root.change_screen("main")
        SimpleLabelFunc:
            text:'Function hi' if self.hi else 'Function Bye'
        Label:
            text:"Bye"

<SimpleScreen>:
    SimpleWidget:
        name:"main"
    SimpleWidget:
        name:"last"
        ort:"horizontal"
